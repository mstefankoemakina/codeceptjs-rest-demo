node {
    def dockerHome = tool 'myDocker'

    stage("Initializing") {
        checkout scm
        env.PATH = "${dockerHome}/bin:${env.PATH}"
        env.DOCKER_HOST="unix:///var/run/docker.sock"
    }

    stage("Testing") {
        echo "Hello world"
        // sh "docker version"
        echo "End testing stage"
    }

    stage("Building Images") {

        def customImage = docker.build("my-image:${env.BUILD_ID}", "--volume /var/run/docker.sock:/var/run/docker.sock")

        customImage.inside {
            sh 'echo "Hello world from docker"'
        }
    }

    stage('Example') {
        sh 'echo myCustomVar = $myCustomVar'
    }
}